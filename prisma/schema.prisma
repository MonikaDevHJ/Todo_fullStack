generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int     @id @default(autoincrement()) // Unique task ID, automatically created
  title       String // Task title
  description String // Description of the task
  completed   Boolean @default(false) // Whether the task is completed or not
}
